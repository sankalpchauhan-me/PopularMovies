<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trailer_player"
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:src="@drawable/ic_play_arrow_black_24dp"/>
    <TextView
        android:id="@+id/trailer_name"
        android:layout_toRightOf="@id/trailer_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/trailer_1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"/>
    <View
        android:layout_below="@id/trailer_player"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
/>


</RelativeLayout>