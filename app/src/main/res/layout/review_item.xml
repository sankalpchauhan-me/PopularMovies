<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/authour"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:text="@string/author_name_sample"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sampleTextLarge"
        android:layout_margin="@dimen/review_content_margin"
        android:maxLines="3"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/readMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/click_to_expand"/>
    <TextView
        android:id="@+id/content_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sampleTextLarge"
        android:layout_margin="2dp" />

</LinearLayout>