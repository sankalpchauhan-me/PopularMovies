<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.DetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorAccent"
               >
                <ImageView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:foreground="@drawable/image_overlay"
                    android:src="@drawable/ic_broken_image_grey_24dp"
                    android:visibility="invisible"
                    tools:targetApi="m"
                    android:contentDescription="@string/movie_backdrop"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/placeholder"
                    android:layout_marginStart="@dimen/placeholder_margin"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/placeholder_margin" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_relative_layout_margin">
                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/ic_broken_image_grey_24dp"
                    android:contentDescription="@string/movie_poster"/>
                <ProgressBar
                    android:id="@+id/progress_circular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/progress_bar_margin"/>
                <LinearLayout
                    android:id="@+id/data_layout"
                    android:layout_margin="@dimen/linear_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/poster">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/release_date"
                        android:text="@string/sampleYear"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/runtime"
                        android:text="@string/language_en_sample"
                        android:textStyle="italic"
                        android:textSize="18sp"
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sampleRating"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/favoriteBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mark_as_favorite"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/margin_top_rating"
                        style="@style/Widget.AppCompat.Button.Colored"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/plot"
                    android:layout_margin="@dimen/overview_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sampleTextLarge"
                    android:layout_toRightOf="@id/data_layout" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorPrimaryDark"
                android:layout_marginEnd="@dimen/overview_margin"
                android:layout_marginStart="@dimen/overview_margin"/>


            <TextView
                android:id="@+id/trailer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/overview_margin"
                android:text="@string/trailers_text"
                android:textSize="22sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trailer_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/progress_bar_margin"
                android:layout_marginRight="@dimen/progress_bar_margin">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/review_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/overview_margin"
                android:text="@string/reviews_text"
                android:textSize="22sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviews_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/progress_bar_margin"
                android:layout_marginRight="@dimen/progress_bar_margin">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>